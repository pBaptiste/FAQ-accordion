---
import FAQS from "../faqs";
import { Image } from "astro:assets";
import iconStar from "../images/icon-star.svg";
import CardItem from "./CardItem.astro";
---

<div class="card">
  <div class="title">
    <Image src={iconStar} alt="Star Icon" class="star" />
    <h1>FAQs</h1>
  </div>
  <div class="item-container">
    {
      FAQS.map((item, index) => (
        <CardItem
          question={item.question}
          answer={item.answer}
          answerId={index}
        />
      ))
    }
  </div>
</div>

<style>
  h1 {
    color: var(--dark-purple);
    font-size: 32px;
    font-style: normal;
    font-weight: 700;
    line-height: normal;
  }

  .star {
    width: 24px;
    height: 24px;
  }

  .title {
    display: flex;
    align-items: center;
    gap: 24px;
  }

  .card {
    display: flex;
    padding: 24px;
    flex-direction: column;
    gap: 24px;
    background-color: white;
    width: 327px;
    margin-top: 50px;
    margin-bottom: 50px;
    border-radius: 8px;
    box-shadow: 0px 32px 56px 0px rgba(80, 0, 118, 0.1);
    z-index: 2;
    overflow: scroll;
  }

  .item-container {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .item-container > p {
    display: none;
  }

  @media (min-width: 768px) {
    h1 {
      font-size: 56px;
      font-style: normal;
    }

    .star {
      width: 40px;
      height: 40px;
    }

    .card {
      width: 600px;
      gap: 32px;
      padding: 40px;
      border-radius: 16px;
    }

    .item-container {
      gap: 24px;
    }
  }
</style>
